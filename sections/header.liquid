<header class="max-w-7xl mx-auto items-center">
    <nav class="p-3">
        <div class="flex justify-between">
           <div class="flex items-center space-x-3">
                <div class="flex items-center w-44 max-w-md bg-white rounded-full border border-gray-300 overflow-hidden">
                <!-- Search Icon -->
                    <div class="pl-3 text-black">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none"
                            viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M21 21l-4.35-4.35M11 19a8 8 0 100-16 8 8 0 000 16z"/>
                        </svg>
                    </div>

                <!-- Input Field -->
                    <input 
                        type="text" 
                        placeholder="Search..."
                        class="w-full mx-2 py-1 text-gray-700 focus:outline-none rounded-full text-md 
                        placeholder:text-black"
                    />  
                </div>

                 {% for link in linklists.main-menu.links limit:2 %}
                    <a href="{{ link.url  }}" class="text-black">{{ link.title }} 
                        <span class="text-gray-300 ml-2">{% unless forloop.last %}|{% endunless %}
                    </a> 
                 {% endfor %}
            </div>
            
            <div class="flex items-center">

                <a href="/">
                    <img src="{{  shop.brand.logo | image_url: width: 200 }}" alt="Logo"/>
                </a>
            </div>

            <div class="flex items-center space-x-3">
                {% for link in linklists.main-menu.links offset:2 limit:3 %}
                    <a href="{{ link.url  }}" class="text-black">{{ link.title }}
                        <span class="text-gray-300 ml-2">{% unless forloop.last %}|{% endunless %}
                    </a> 
                 {% endfor %}
              
                <a href="/cart" class="relative">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 p-1 bg-black rounded-full text-white" fill="none" 
                        viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                            d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
                    </svg>
                    <span class="absolute -top-2 -right-2 bg-red-600 text-white rounded-full 
                        text-xs w-5 h-5 flex items-center justify-center">
                        {{ cart.item_count }}
                    </span>
            </div>
        </div>
    </nav>
</header>